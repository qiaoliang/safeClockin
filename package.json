{
  "name": "safeguard-frontend",
  "version": "1.0.0",
  "description": "SafeGuard Frontend - uni-app based safety monitoring app",
  "scripts": {
    "test": "vitest",
    "test:unit": "vitest --config vitest.config.js",
    "test:func": "vitest --config vitest.integration.config.js",
    "test:e2e": "vitest --config vitest.e2e.config.js",
    "test:playwright": "./scripts/run-playwright-e2e.sh",
    "test:playwright:ui": "./scripts/run-playwright-e2e.sh --ui",
    "test:playwright:debug": "./scripts/run-playwright-e2e.sh --debug",
    "test:playwright:headed": "./scripts/run-playwright-e2e.sh --headed",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:unit:run": "vitest run --config vitest.config.js",
    "test:func:run": "vitest run --config vitest.integration.config.js",
    "test:e2e:run": "./scripts/run-playwright-e2e.sh",
    "test:e2e:direct": "vitest run --config vitest.e2e.config.js",
    "lint": "eslint src --ext .vue,.js,.ts",
    "lint:fix": "eslint src --ext .vue,.js,.ts --fix",
    "build:mp-weixin": "./scripts/mpbuild.sh",
    "build:unit": "./scripts/build-env.sh unit",
    "build:func": "./scripts/build-env.sh func",
    "build:uat": "./scripts/build-env.sh uat",
    "build:prod": "./scripts/build-env.sh prod"
  },
  "dependencies": {
    "@dcloudio/uni-ui": "^1.5.11",
    "crypto-js": "^4.2.0",
    "pinia": "^2.0.0",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "eslint": "^8.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "jsdom": "^23.0.0",
    "msw": "^2.12.4",
    "sass": "^1.96.0",
    "sass-loader": "^10.1.1",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
